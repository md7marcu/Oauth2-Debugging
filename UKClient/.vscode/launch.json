{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {  
            "name":"Launch via nodemon",
            "type":"node",
            "request":"launch",
            "protocol":"inspector",
            "cwd":"${workspaceRoot}",
            "runtimeExecutable":"${workspaceRoot}/node_modules/.bin/env-cmd",
            "runtimeArgs": [               
                "-f",
                "${workspaceRoot}/config/.env",
                "${workspaceRoot}/node_modules/.bin/ts-node-dev",
                "${workspaceRoot}/lib/server.ts",
            ],
            "port": 9229,
            "restart":true
         },
         {
            "type": "node",
            "request": "attach",
            "name": "Attach to Docker - dist map",
            "preLaunchTask": "tsc-watch",
            "protocol":"auto",
            "port": 9226,
            "restart": true,
            "localRoot": "${workspaceFolder}/dist",
            "remoteRoot": "/dist",
            "outFiles": [
              "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
              "<node_internals>/**/*.js",
            ]
          },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "port": 9226,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app/",
            "protocol": "inspector",
            "restart": true // if nodemon restarts - reconnect the debugger,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TypeScript in Node.js",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/lib/server.ts",
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "env": { "PORT":"3000" },
            "outFiles": [
              "${workspaceFolder}/dist/**/*.js"
            ],
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Mocha All",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/**/*spec.ts",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector"
        }
    ]
}