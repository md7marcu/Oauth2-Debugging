{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "label": "compileTs",            
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "copyViews",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "lib\\Views\\*",
                "dist\\views\\*",
                "/s",
                "/i",
                "/Y"
            ]
        },
        {
            "label": "copyServerCert",
            "type": "shell",
            "command": "copy",
            "args": [
                "..\\UKAuth\\Config\\cert.pem",
                "config\\serverCert.pem",
                "-Force"
            ]
        },
        {
            "label": "buildConfig",
            "type": "shell",
            "command": "npm run postinstall",
        },
        {
            "label": "build",
            "dependsOn": [
                "compileTs",
                "copyViews",
                "buildConfig",
                "copyServerCert",
            ]
        }
    ]
}